<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drink_card"
    android:divider="@drawable/empty_tall_divider">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/tvDrinkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"

            android:background="@android:color/transparent"
            android:fontFamily="@font/blogger_sans_bold"
            android:text="Cappuccino"
            android:textAlignment="center"
            android:textSize="12pt"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCalories"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"

            android:layout_marginEnd="32dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/blogger_sans_medium"
            android:text="%d calories"
            android:textAlignment="center"
            android:textSize="8pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDrinkName" />

        <TextView
            android:id="@+id/tvDescription"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"

            android:background="@android:color/transparent"
            android:fontFamily="@font/blogger_sans_medium_italic"

            android:lines="4"
            android:minLines="1"
            android:text="A very interesting description no one will ever read.
But I will write it anyway, just to test multiline output."

            android:textAlignment="center"
            android:textSize="7pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCalories" />


        <HorizontalScrollView
            android:id="@+id/scrollCoffeeBookCollections"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:fillViewport="true"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription">

            <LinearLayout
                android:id="@+id/layoutCoffeeBookCollections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:divider="@drawable/empty_tall_divider"
                android:orientation="horizontal"
                android:padding="10dp" />
        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>